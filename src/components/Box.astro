---

const { link, paragraph, width } = Astro.props

---

<div class="yoo">

  <img width={width} src={link}>
  <p class="write">{paragraph}</p>

</div>

<style>
  .yoo {
    padding: 5px;
    background-color: rgb(206, 252, 254);
    font-family:'Times New Roman', Times, serif;
    display: flex;
    flex-direction: row;
    gap: 1rem;
    border: 1rem solid rgb(215, 173, 245);
  }
  img {
    /* object-fit: cover; */
    object-fit: fill;
  }
  p {
    font-size: 1rem;
  }

</style>